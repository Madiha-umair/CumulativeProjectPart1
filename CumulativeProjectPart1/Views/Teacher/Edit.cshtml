@model CumulativeProject.Models.Teacher
@{
    ViewBag.Title = "Edit";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/Show/@Model.TeacherId">Back</a>
    </nav>
    <h2>Edit</h2>

    <form method="POST" action="/Teacher/Update/@Model.TeacherId" name="editteacher">
        <div class="inputrow">
            <label for="TecherFname">Teacher First Name</label>
            <input type="text" name="TeacherFname" id="TecherFname" value="@Model.TeacherFname" class="TeacherFname"/>
            <span id="ErrfName"></span>
        </div>
        <div class="inputrow">
            <label>Teacher Last Name</label>
            <input type="text" name="TeacherLname" value="@Model.TeacherLname" class="TeacherLname" />
            <span id="ErrlName"></span>
        </div>
        <div class="inputrow">
            <label>Hire date</label>
            <input type="datetime" name="HireDate" value="@Model.HireDate" class="HireDate" placeholder="2022-03-04 00:00:00 A.M" />
            <span id="ErrHireDate"></span>
        </div>
        <div class="inputrow">
            <label>Salary</label>
            <input type="number" name="Salary" value="@Model.Salary" class="Salary"  />
            <span id="ErrSalary"></span>
        </div>
        <div class="inputrow">
            <input type="submit" value="Edit Teacher" />
        </div>
    </form>
</div>

<script language="javascript" type="text/javascript">
    var formHandle = document.forms.editteacher;
    formHandle.onsubmit = processForm;
    var LetterRange = /^[A-Za-z]+$/;
    function processForm()
    {
        var firstname = formHandle.TeacherFname;
        var lastname = formHandle.TeacherLname;
        var hiringdate = formHandle.HireDate;
        var salary = formHandle.Salary;

        if (!LetterRange.test(firstname.value)) {
            firstname.style.background = "red";
            ErrfName.style.background = "red";
            ErrfName.style.color = "white";
            ErrfName.innerHTML = "*Please enter your first name in letters!";
            firstname.focus();
            return false;
        }
        else if (!LetterRange.test(lastname.value)) {
            lastname.style.background = "red";
            ErrlName.style.background = "red";
            ErrlName.style.color = "white";
            ErrlName.innerHTML = "*Please enter your last name in letters!";
            lastname.focus();
            return false;
        }
        else if (hiringdate.value === "") {
            hiringdate.style.background = "red";
            ErrHireDate.style.background = "red";
            ErrHireDate.style.color = "white";
            ErrHireDate.innerHTML = "*Please enter the hire date!";
            hiringdate.focus();
            return false;
        }
        else if (salary.value === "") {
            salary.style.background = "red";
            ErrSalary.style.background = "red";
            ErrSalary.style.color = "white";
            ErrSalary.innerHTML = "*Please enter the salary in numbers!";
            salary.focus();
            return false;
        }
    }
</script>